{
  "name": "elasticsearch-orders-sink",
  "config": {
    "connector.class": "io.confluent.connect.elasticsearch.ElasticsearchSinkConnector",
    "tasks.max": "3",

    "topics": "enriched-orders",

    "connection.url": "http://elasticsearch:9200",
    "connection.compression": "true",
    "connection.timeout.ms": "10000",
    "read.timeout.ms": "30000",
    "max.retries": "5",
    "retry.backoff.ms": "1000",

    "type.name": "_doc",
    "key.ignore": "false",
    "schema.ignore": "true",
    "compact.map.entries": "true",
    "drop.invalid.message": "false",

    "behavior.on.null.values": "delete",
    "behavior.on.malformed.documents": "warn",

    "batch.size": "2000",
    "max.in.flight.requests": "5",
    "linger.ms": "1000",
    "flush.timeout.ms": "60000",
    "max.buffered.records": "20000",

    "write.method": "upsert",

    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "false",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",

    "transforms": "extractKey,addIndexedTime",
    
    "transforms.extractKey.type": "org.apache.kafka.connect.transforms.ExtractField$Key",
    "transforms.extractKey.field": "orderId",

    "transforms.addIndexedTime.type": "org.apache.kafka.connect.transforms.InsertField$Value",
    "transforms.addIndexedTime.timestamp.field": "indexedAt",

    "errors.tolerance": "all",
    "errors.log.enable": "true",
    "errors.log.include.messages": "true",
    "errors.deadletterqueue.topic.name": "dlq-elasticsearch-orders",
    "errors.deadletterqueue.topic.replication.factor": "3",
    "errors.deadletterqueue.context.headers.enable": "true"
  }
}